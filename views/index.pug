doctype html
html
    head 
        title= title
    body
        h1= message
        p= count
        each value in users
            p !{value.firstName}
            input(type="button", value="Edit", onclick=`window.location.href='/update?id=${value._id}'`)
        ul
        if current > 1
            li
            a(href=`?page=${parseInt(current) - 1}`) Previous
        - var i = 1
        while i <= pages
            li
            if current == i
                p= i++
            else
                a(href=`?page=${i}`)= i++
        if current < pages
            li
            a(href=`?page=${parseInt(current) + 1}`) Next